<?xml version="1.0" encoding="utf-8"?>
<com.yh.materialdesign.views.LayoutRipple xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemMenuButtons"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_56PX"
    android:padding="@dimen/DIMEN_10PX"
    android:background="@android:color/transparent"
    android:clickable="true" >    

        <ImageView
            android:id="@+id/iv_menu_avatar"
            android:layout_width="@dimen/DIMEN_32PX"
            android:layout_height="@dimen/DIMEN_32PX"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_12PX"
            android:layout_marginStart="@dimen/DIMEN_12PX"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_security_white_36dp" />

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_menu_avatar"
            android:layout_toEndOf="@id/iv_menu_avatar"
            android:layout_marginLeft="@dimen/DIMEN_12PX"
            android:layout_marginStart="@dimen/DIMEN_12PX"
            android:text="@string/app_name"
    		android:textSize="@dimen/default_text_size"
    		android:textColor="@color/white"  />
</com.yh.materialdesign.views.LayoutRipple>
