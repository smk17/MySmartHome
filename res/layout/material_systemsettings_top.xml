<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_drawer_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_56PX"
    android:background="@color/title_background">
	
    <ImageView        
        android:id="@+id/drawer_back"
        android:layout_width="@dimen/DIMEN_56PX"
        android:layout_height="@dimen/DIMEN_56PX"
        android:layout_gravity="start"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:contentDescription="@string/app_name"
        android:background="@drawable/drawer_selector"
        android:src="@drawable/ic_arrow_left_white_24dp"
        android:scaleType="centerInside" />
    
    <TextView
            android:id="@+id/drawer_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_56PX"
            android:layout_marginLeft="@dimen/DIMEN_72PX"
            android:layout_marginStart="@dimen/DIMEN_72PX"
    		android:layout_marginRight="@dimen/DIMEN_16PX"
    		android:layout_marginEnd="@dimen/DIMEN_16PX"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size"
            android:text="@string/app_name" />
    
</RelativeLayout>
