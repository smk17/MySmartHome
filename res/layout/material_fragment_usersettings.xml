<?xml version="1.0" encoding="utf-8"?>
<com.yh.materialdesign.views.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@android:color/transparent" 
    	android:orientation="vertical" >
    
    <com.yh.materialdesign.views.ButtonFloatSmall
            android:id="@+id/btnfs_avatar"
            android:layout_width="@dimen/DIMEN_72PX"
            android:layout_height="@dimen/DIMEN_72PX"
            android:layout_marginTop="@dimen/DIMEN_32PX"
            android:clickable="true" 
            android:layout_gravity="center"
            android:background="@color/title_background"
            materialdesign:sizeIcon = "68"
            materialdesign:iconFloat="@drawable/ic_account_white_48dp" />
    
    <com.yh.materialdesign.views.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="@dimen/DIMEN_72PX"
            android:layout_height="@dimen/DIMEN_72PX"
            android:layout_marginTop="@dimen/DIMEN_32PX"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/ic_account_white_48dp"/>
    
    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:text="@string/app_name"
            android:textColor="#353535"
            android:layout_gravity="center"
            android:textSize="@dimen/item_text_size" />

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_20PX"            
            android:text="@string/app_name"
            android:textColor="#aaaaaa"
            android:layout_gravity="center"
            android:textSize="@dimen/reason_text_size" />
        
        <include layout="@layout/material_item_systemsettings_top"/>
         <include 
        	android:id="@+id/user_rename"
        	layout="@layout/material_item_systemsettings"/>
          <include 
        	android:id="@+id/user_binding"
        	android:visibility="gone"
        	layout="@layout/material_item_systemsettings"/>
           <include 
        	android:id="@+id/user_login"
        	layout="@layout/material_item_systemsettings"/>
        <include 
        	android:id="@+id/user_jurisdiction"
        	layout="@layout/material_item_systemsettings"/>
        
        <include layout="@layout/material_item_systemsettings_top"/>
        <include 
        	android:id="@+id/user_theme"
        	layout="@layout/material_item_systemsettings"/>        
        <include 
        	android:id="@+id/user_advanced_settings"
        	layout="@layout/material_item_systemsettings"/>        
        
        <include layout="@layout/material_item_systemsettings_top"/>
        <include 
        	android:id="@+id/user_quit"
        	layout="@layout/material_item_systemsettings"/>
    </LinearLayout>
</com.yh.materialdesign.views.ScrollView>
