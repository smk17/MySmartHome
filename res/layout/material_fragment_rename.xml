<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/container"
    android:orientation="vertical" >
    
    <RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/DIMEN_48PX"
    	android:layout_marginTop="@dimen/DIMEN_12PX"
    	android:background="@android:color/transparent" 
    	android:orientation="vertical" >
    	<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"      
            android:text="@string/basic_info"
            android:layout_marginLeft="@dimen/DIMEN_12PX"
            android:layout_marginStart="@dimen/DIMEN_12PX"
            android:textColor="#aaaaaa"
            android:textSize="@dimen/reason_text_size" />
		<View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#dadada" />      
	</RelativeLayout>
    
    <com.yh.materialdesign.views.LayoutDropdownButton
		android:id="@+id/rename_avatar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/DIMEN_56PX"
		android:background="@drawable/settings_selector" /> 
		
    <com.yh.materialdesign.views.LayoutDropdownButton
		android:id="@+id/rename_name"
		android:layout_width="match_parent"
		android:layout_height="@dimen/DIMEN_56PX"
		android:background="@drawable/settings_selector" /> 
		
    <RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/DIMEN_48PX"
    	android:layout_marginTop="@dimen/DIMEN_12PX"
    	android:background="@android:color/transparent" 
    	android:orientation="vertical" >
		
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"      
            android:layout_marginLeft="@dimen/DIMEN_12PX"
            android:layout_marginStart="@dimen/DIMEN_12PX"
            android:text="@string/security_info"
            android:textColor="#aaaaaa"
            android:textSize="@dimen/reason_text_size" />
		<View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#dadada" />      
	</RelativeLayout>
		
    <com.yh.materialdesign.views.LayoutDropdownButton
		android:id="@+id/rename_phone"
		android:layout_width="match_parent"
		android:layout_height="@dimen/DIMEN_56PX"
		android:background="@drawable/settings_selector" /> 
		
    <com.yh.materialdesign.views.LayoutDropdownButton
		android:id="@+id/rename_email"
		android:layout_width="match_parent"
		android:layout_height="@dimen/DIMEN_56PX"
		android:visibility="gone"
		android:background="@drawable/settings_selector" /> 
	
</LinearLayout>
